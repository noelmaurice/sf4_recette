{% extends 'base.html.twig' %}

{% block title %}Aliments en folie{% endblock %}

{% block monTitre %}
    {% if isCalorie == false and isGlucide == false %}
        Tous les aliments
    {% elseif isCalorie %}
        Aliments avec -{{ calorie }} calories/100g
    {% elseif isGlucide %}
        Aliments avec -{{ glucide }} glucides/100g
    {% endif %}
{% endblock %}

{% block body %}

    <a href="{{path("aliment_view_all")}}" class="btn btn-primary btn-command">Tous</a>
    <a href="{{path("aliment_view_all_calory", {"calorie":50}) }}" class="btn btn-primary btn-command">-50 calories/100g</a>
    <a href="{{path("aliment_view_all_glucide", {"glucide":5}) }}" class="btn btn-primary btn-command">-5 glucides/100g</a>

    <div class="row">
        {% for aliment in aliments %}
            <div class="col-12 col-md-6 col-lg-3 col-xl-3">
                <div class="card border-primary mb-3 mx-auto" style="max-width:20rem">
                    <div class="card-header text-center">
                        <img src="{{asset('images/aliments/' ~ aliment.image)}}" alt="" class="perso_imgAliment card-img-top">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{aliment.nom}}</h3>
                        <p class="card-text">
                            <h4 class="text-center">Prix (kilo) : {{aliment.prix}}</h4>
                            <h4 class="text-center">Type : {{aliment.type.libelle}}</h4>
                            <table class="table text-center">
                                <tr class="table-primary">
                                    <td>Propriété</td>
                                    <td>Valeur (100g)</td>
                                </tr>
                                <tr>
                                    <td>Calorie</td>
                                    <td>{{aliment.calorie}}</td>
                                </tr>
                                <tr>
                                    <td>Protéines</td>
                                    <td>{{aliment.proteine}}</td>
                                </tr>
                                <tr>
                                    <td>Glucides</td>
                                    <td>{{aliment.glucide}}</td>
                                </tr>
                                <tr>
                                    <td>Lipides</td>
                                    <td>{{aliment.lipide}}</td>
                                </tr>
                            </table>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
